// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Coordinator{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  hierarchy Int // 2
}

model Course {
  id Int @id @default(autoincrement())
  name String
  grades Grade[]
  users User[]
}

model User { // Aluno
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  telefone String
  cpf String
  hierarchy Int // 0
  course Course? @relation(fields: [courseId], references: [id])
  courseId Int
}

model Teacher {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  grades Grade[]
  hierarchy Int // 1
}

model Grade { //Substitui mat√©ria
  id Int @id @default(autoincrement())
  name String
  teacherId Int @unique
  teacher Teacher? @relation(fields: [teacherId], references: [id])
  courseId Int @unique
  course Course? @relation(fields: [courseId], references: [id])
}

